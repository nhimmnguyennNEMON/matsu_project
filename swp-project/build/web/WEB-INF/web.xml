<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name> isLog4jAutoInitializationDisabled </param-name>
        <param-value> true </param-value>
    </context-param>
    <filter>
        <filter-name>ResetToken</filter-name>
        <filter-class>filter.ResetTokenFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>filter.AdminFilter</filter-class>
    </filter>
    <filter>
        <filter-name>StudentFilter</filter-name>
        <filter-class>filter.StudentFilter</filter-class>
    </filter>
    <filter>
        <filter-name>ManagerFilter</filter-name>
        <filter-class>filter.ManagerFilter</filter-class>
    </filter>
    <filter>
        <filter-name>MgrTeacherFilter</filter-name>
        <filter-class>filter.MgrTeacherFilter</filter-class>
    </filter>
    <filter>
        <filter-name>TeacherFilter</filter-name>
        <filter-class>filter.TeacherFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>TeacherFilter</filter-name>
        <url-pattern>/teacher/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>MgrTeacherFilter</filter-name>
        <url-pattern>/mgr-teacher/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ManagerFilter</filter-name>
        <url-pattern>/manager/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>StudentFilter</filter-name>
        <url-pattern>/student/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ResetToken</filter-name>
        <url-pattern>/dash-board</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>controller.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserProfileController</servlet-name>
        <servlet-class>controller.UserProfileController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DashboardController</servlet-name>
        <servlet-class>controller.DashboardController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FileUploadController</servlet-name>
        <servlet-class>controller.fileUpload.FileUploadController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthController</servlet-name>
        <servlet-class>controller.AuthController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SettingController</servlet-name>
        <servlet-class>controller.SettingController</servlet-class>
        <init-param>
            <param-name>1</param-name>
            <param-value>Setting Roles</param-value>
        </init-param>
        <init-param>
            <param-name>2</param-name>
            <param-value>Setting Issue Type</param-value>
        </init-param>
        <init-param>
            <param-name>3</param-name>
            <param-value>Setting Issue status</param-value>
        </init-param>
        <init-param>
            <param-name>4</param-name>
            <param-value>Setting Subject Complexit</param-value>
        </init-param>
        <init-param>
            <param-name>5</param-name>
            <param-value>Setting Subject Quality</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>UserController</servlet-name>
        <servlet-class>controller.UserController</servlet-class>
        <init-param>
            <param-name>1</param-name>
            <param-value>Admin</param-value>
        </init-param>
        <init-param>
            <param-name>2</param-name>
            <param-value>Manager</param-value>
        </init-param>
        <init-param>
            <param-name>3</param-name>
            <param-value>Teacher</param-value>
        </init-param>
        <init-param>
            <param-name>4</param-name>
            <param-value>Student</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>SubjectController</servlet-name>
        <servlet-class>controller.SubjectController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SubjectSettingController</servlet-name>
        <servlet-class>controller.SubjectSettingController</servlet-class>
        <init-param>
            <param-name>1</param-name>
            <param-value>Setting Subject Complexit</param-value>
        </init-param>
        <init-param>
            <param-name>2</param-name>
            <param-value>Setting Subject Quality</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>ClassUserController</servlet-name>
        <servlet-class>controller.ClassUserController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TeamController</servlet-name>
        <servlet-class>controller.TeamController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FeatureController</servlet-name>
        <servlet-class>controller.FeatureController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IterationController</servlet-name>
        <servlet-class>controller.IterationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MilestonesController</servlet-name>
        <servlet-class>controller.MilestonesController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClassController</servlet-name>
        <servlet-class>controller.ClassController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EvaluationCriteriaController</servlet-name>
        <servlet-class>controller.EvaluationCriteriaController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IssueController</servlet-name>
        <servlet-class>controller.IssueController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DashboardController</servlet-name>
        <url-pattern>/dash-board</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FileUploadController</servlet-name>
        <url-pattern>/file-upload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserProfileController</servlet-name>
        <url-pattern>/user-profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthController</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SubjectController</servlet-name>
        <url-pattern>/admin/subject</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SettingController</servlet-name>
        <url-pattern>/admin/setting</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/admin/user</url-pattern>
    </servlet-mapping>
    <error-page>
        <error-code>404</error-code>
        <location>/template/error.jsp</location>
    </error-page>
    <servlet-mapping>
        <servlet-name>SubjectController</servlet-name>
        <url-pattern>/admin/subject</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SubjectSettingController</servlet-name>
        <url-pattern>/admin/subject-setting</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>template/HomePage.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <error-page>
        <location>/template/error.jsp</location>
    </error-page>
    <servlet-mapping>
        <servlet-name>FeatureController</servlet-name>
        <url-pattern>/student/feature</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IterationController</servlet-name>
        <url-pattern>/manager/iteration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClassUserController</servlet-name>
        <url-pattern>/teacher/class-user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TeamController</servlet-name>
        <url-pattern>/teacher/team</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MilestonesController</servlet-name>
        <url-pattern>/teacher/milestones</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClassController</servlet-name>
        <url-pattern>/teacher_manager/class</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EvaluationCriteriaController</servlet-name>
        <url-pattern>/manager/evaluation_criteria</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IssueController</servlet-name>
        <url-pattern>/student/issue</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>
